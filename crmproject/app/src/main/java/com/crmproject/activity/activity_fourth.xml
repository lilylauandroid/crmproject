<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_mine_info"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="@drawable/mine_top_bg">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="我的"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/header_cloud_bg"/>


                <ImageView
                    android:id="@+id/iv_photo"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_below="@id/tv_title"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/personl_icon" />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:text="姚海"
                    android:layout_alignTop="@id/iv_photo"
                    android:layout_alignBottom="@id/iv_photo"
                    android:layout_toRightOf="@id/iv_photo"
                    android:textSize="23sp"
                    android:gravity="center"
                    android:textColor="@color/header_cloud_bg"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@id/tv_name"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_alignParentRight="true"
                        android:id="@+id/iv_confirm_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/setting_icon" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/v_divider_top"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_f5f5f5"/>

            <LinearLayout
                android:id="@+id/ll_user"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:visibility="visible">

                <ImageView
                    style="@style/mineIconStyle"
                    android:src="@drawable/mine_change_info" />

                <TextView
                    style="@style/mineTitleStyle"
                    android:text="切换用户"
                    android:layout_width="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/mineIconRightStyle"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/right"/>
            </LinearLayout>
            <View
                style="@style/mineLineStyle"/>
            <LinearLayout
                android:id="@+id/ll_message"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:visibility="visible">

                <ImageView
                    style="@style/mineIconStyle"
                    android:src="@drawable/mine_system_info" />

                <TextView
                    style="@style/mineTitleStyle"
                    android:text="系统信息"
                    android:layout_width="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/mineIconRightStyle"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/right"/>
            </LinearLayout>
            <View
                style="@style/mineLineStyle"/>
            <LinearLayout
                android:id="@+id/ll_exit"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:visibility="visible">

                <ImageView
                    style="@style/mineIconStyle"
                    android:src="@drawable/mine_system_exit" />

                <TextView
                    style="@style/mineTitleStyle"
                    android:text="退出系统"
                    android:layout_width="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/mineIconRightStyle"
                    android:layout_gravity="left|center_vertical"
                    android:background="@drawable/right"/>
            </LinearLayout>
            <View
                style="@style/mineLineStyle"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>
