<resources>



    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#ffeeeeee</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- 宽全屏，高自适应 -->
    <style name="fill_width">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_tab_bottom_new">
        <item name="android:textSize">10sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">1dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>


    <style name="Theme.AppCompat.Light.Dialog.Alert.Self"
        parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">#228ce2</item>
    </style>
    <style name="mineIconStyle">
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="mineTitleStyle" parent="wrap">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/six_three</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="mineIconRightStyle" >
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">23dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/right</item>
    </style>
    <style name="mineLineStyle">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">57dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/line_e5e5e5</item>
    </style>
    <!-- 进度对话框样式 -->
    <style name="Theme.Light.ProcessDialog.Blue" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/toast_frame</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>
    <!-- 对话框样式 -->
    <style name="Theme.Light.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    <!-- listview样式 -->
    <style name="list">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:dividerHeight">1.0dip</item>
        <item name="android:divider">@drawable/divider_line</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">@color/white</item>
        <item name="android:layout_weight">0.0</item>
    </style>
    <!-- 文字黑色18 -->
    <style name="black18">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- 文字黑色16 -->
    <style name="black16">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- 文字灰色14 -->
    <style name="gray14">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- 列表头图 -->
    <style name="list_item_img_head_online">
        <item name="android:layout_width">100dip</item>
        <item name="android:layout_height">75dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <!-- 文字灰色16 -->
    <style name="gray16">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- 文字16 -->
    <style name="text16">
        <item name="android:textSize">16.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- 文字14 -->
    <style name="text14">
        <item name="android:textSize">14.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- 文字蓝色18 -->
    <style name="blue18">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- 文字橙色16 -->
    <style name="orange16">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- 标题文字黑色18 -->
    <style name="title_black18" parent="black18">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <!-- 内容文字灰色16 -->
    <style name="content_gray16" parent="gray16">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <!-- 联系人白色16 -->
    <style name="personwhite16">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- 联系人白色18 -->
    <style name="personwhite18">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18.0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <!-- 分割线 -->
    <style name="divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@drawable/divider_line</item>
    </style>
    <!-- 自适应宽高 -->
    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
