<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="菜单"
            android:textColor="#ffffffff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:background="#BE1E13"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统管理"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <!-- 系统管理 -->
            <com.crmproject.view.MyGridView
                android:id="@+id/menu_system_gridview"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:numColumns="4"
                android:background="@color/transparent"
                android:listSelector="@color/transparent"
                android:scrollbars="none"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产检测"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <!-- 生产检测 -->
            <com.crmproject.view.MyGridView
                android:id="@+id/menu_monitor_gridview"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:numColumns="4"
                android:background="@color/transparent"
                android:listSelector="@color/transparent"
                android:scrollbars="none"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产管理"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <!-- 生产管理 -->
            <com.crmproject.view.MyGridView
                android:id="@+id/menu_product_gridview"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:numColumns="4"
                android:background="@color/transparent"
                android:listSelector="@color/transparent"
                android:scrollbars="none"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机电管理"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <!-- 机电管理 -->
            <com.crmproject.view.MyGridView
                android:id="@+id/menu_electronic_gridview"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:numColumns="4"
                android:background="@color/transparent"
                android:listSelector="@color/transparent"
                android:scrollbars="none"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安全管理"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <!-- 安全管理 -->
            <com.crmproject.view.MyGridView
                android:id="@+id/menu_security_gridview"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:numColumns="4"
                android:background="@color/transparent"
                android:listSelector="@color/transparent"
                android:scrollbars="none"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运销管理"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <!-- 运销管理 -->
            <com.crmproject.view.MyGridView
                android:id="@+id/menu_sale_gridview"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:numColumns="4"
                android:background="@color/transparent"
                android:listSelector="@color/transparent"
                android:scrollbars="none"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="煤质管理"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <!-- 煤质管理 -->
            <com.crmproject.view.MyGridView
                android:id="@+id/menu_coalquality_gridview"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:numColumns="4"
                android:background="@color/transparent"
                android:listSelector="@color/transparent"
                android:scrollbars="none"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合管理"
                android:textColor="#ff333333"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"/>

            <!-- 综合管理 -->
            <com.crmproject.view.MyGridView
                android:id="@+id/menu_integrate_gridview"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:numColumns="4"
                android:background="@color/transparent"
                android:listSelector="@color/transparent"
                android:scrollbars="none"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>