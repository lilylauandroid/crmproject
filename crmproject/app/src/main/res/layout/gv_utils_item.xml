<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:layout_marginRight="18dp"
    android:layout_marginLeft="18dp"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_function_icon_bg"
        style="@style/fill_width"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/ll_function_icon_bg"
            style="@style/wrap"
            android:layout_marginTop="12dip"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_function_icon"
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:src="@drawable/home_menu_1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_function_count"
            android:layout_height="18dp"
            android:layout_width="18dp"
            android:padding="2dp"
            android:layout_alignRight="@id/ll_function_icon_bg"
            android:layout_marginTop="10dip"
            android:background="@drawable/home_menu_tip_bg"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_function_point"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignRight="@+id/ll_function_icon_bg"
            android:layout_marginTop="8dp"
            android:layout_marginRight="-5dp"
            android:src="@drawable/home_menu_1"
            android:gravity="center"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_function_name"
        style="@style/fill_width"
        android:layout_below="@+id/rl_function_icon_bg"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textColor="@color/black_0e131a"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="18dp"
        android:textSize="12sp"
        android:text="代办任务"/>

    <RelativeLayout
        android:id="@+id/rl_open"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_open"
            style="@style/wrap"
            android:text="展开"
            android:textColor="@color/gray_888" />

        <ImageView
            android:id="@+id/iv_open"
            style="@style/wrap"
            android:layout_below="@id/tv_open" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/window_bg"
        android:visibility="gone"></RelativeLayout>
</RelativeLayout>